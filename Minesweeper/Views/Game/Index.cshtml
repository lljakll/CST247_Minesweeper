@model  Minesweeper.Models.Game.Grid

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .gameboard table {
        border: 1px solid;
        border-color: black;
        border-collapse: collapse;
        border: 0;
    }

    .gameboard td {
        border-color: black;
        border: 1px solid;
        background-color: #BCBCBC;
        width: 32px;
        height: 32px;
        text-align: center;
        font-weight: bold;
        vertical-align: middle;
        padding: 0;
    }

    h2 {
        color: black;
    }
</style>

<h2 align="center">
    Minesweeper
</h2>

<div class="gameboard" align="center">

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h4>
                    Time: 
                </h4>
            </div>
            <div class="col-sm">
                <h4>
                    Score: 
                </h4>
            </div>
        </div>
    </div>

    <div id="gameboard">

        @{ Html.RenderPartial("Game", Model); }

    </div>

    @using (Ajax.BeginForm("ResetGrid", "Game", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "gameboard" }))
    {
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                @if (Model.GameOver == false)
                {
                    @:<button id="reset" class="btn btn-default">Reset Game</button>
                }
                else
                {
                    @:<button id="new" class="btn btn-default">New Game</button>
                }
            </div>
        </div>
    }

</div>



@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js" type="text/javascript">
    </script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
