@{
    ViewBag.Title = "Minesweeper";
}

<h2>
    Minesweeper
</h2>

<style>
    .gameboard table {
        border: 1px solid;
        border-color: black;
        border-collapse: collapse;
        border: 0;
    }

    .gameboard td {
        border-color: black;
        border: 1px solid;
        background-color: #BCBCBC;
        width: 32px;
        height: 32px;
        text-align: center;
        font-weight: bold;
        vertical-align: middle;
        padding: 0;
    }

    h2 {
        color: red;
    }
</style>

@using (Html.BeginForm("SetDifficulty", "Game", FormMethod.Get))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="difficulty" value="Easy" class="btn btn-default" />
            <input type="submit" name="difficulty" value="Medium" class="btn btn-default" />
            <input type="submit" name="difficulty" value="Hard" class="btn btn-default" />
        </div>
    </div>
}

<div class="gameboard">
    <table>
        @for (var y = 0; y < Model.Rows; y++)
        {
            <tr>
                @for (var x = 0; x < Model.Cols; x++)
                {
                    <td>
                        @if (Model.Cells[x, y].Visited)
                        {
                            if (Model.Cells[x, y].Live)
                            {
                                <div style="color:black; font-size:20px;">
                                    <img src="~/Content/Images/mine.png" />
                                </div>
                            }
                            else
                            {
                                if (Model.Cells[x, y].LiveNeighbors > 0)
                                {
                                    switch (Model.Cells[x, y].LiveNeighbors)
                                    {
                                        case 1:
                                            @:<font color="blue">@Model.Cells[x, y].LiveNeighbors</font>
                                            break;
                                        case 2:
                                            @:<font color="green">@Model.Cells[x, y].LiveNeighbors</font>
                                            break;
                                        case 3:
                                            @:<font color="red">@Model.Cells[x, y].LiveNeighbors</font>
                                            break;
                                        default:
                                            @:<font color="purple">@Model.Cells[x, y].LiveNeighbors</font>
                                            break;
                                    }
                                }
                            }
                        }
                        else
                        {
                            using (Html.BeginForm("ActivateCell", "Game", FormMethod.Post))
                            {
                                <input type="hidden" name="id" value=@Model.Cells[x, y].Id>
                                <input type="hidden" name="x" value=@Model.Cells[x, y].X>
                                <input type="hidden" name="y" value=@Model.Cells[x, y].Y>
                                <input type="image" name="submit" src="~/Content/Images/b.png" style="width:32px;height:32px;display:block;" border="0" alt="Submit" />
                            }
                        }
                    </td>
                }
            </tr>
        }
    </table>
    <br /><br />
    @using (Html.BeginForm("ResetGrid", "Game", FormMethod.Get))
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (Model.GameOver == false)
                {
                    @:<input type="submit" value="Reset Game" class="btn btn-default" />
                }
                else
                {
                    @:<input type="submit" value="New Game" class="btn btn-default" />
                }
            </div>
        </div>
    }
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js">
    </script>

    <script>
        $(function () {
            $('#')
        });
    </script>
}